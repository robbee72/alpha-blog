<% if @article.errors.any? %>
<h3> The following errors have occurred</h3>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>	
	</ul>
<% end %>

<div class='row'>
	<div class='col-xs-12'>
		<%= form_for @article, :html => {class: "form-horizontal", role: "form"} do |w| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= w.label :title %>
				</div>
				<div class="col-sm-8">
					<%= w.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= w.label :description %>
				</div>
				<div class="col-sm-8">
					<%= w.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article" %>
				</div>	
		</div>
		<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= w.submit class: 'btn btn-primary' %>
				</div>
		</div>
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and return to article listing", articles_path %> ]
		</div>
	</div>
</div>
		