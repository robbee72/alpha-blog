<%= render 'shared/errors', obj: @user %>

<div class='row'>
	<div class='col-xs-12'>
		<%= form_for @user, :html => {class: "form-horizontal", role: "form"} do |w| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= w.label :username %>
				</div>
				<div class="col-sm-8">
					<%= w.text_field :username, class: "form-control", placeholder: "Enter user name", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= w.label :email %>
				</div>
				<div class="col-sm-8">
					<%= w.email_field :email, class: "form-control", placeholder: "Enter email" %>
				</div>	
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= w.label :password %>
				</div>
				<div class="col-sm-8">
					<%= w.password_field :password, class: "form-control", placeholder: "Enter password" %>
				</div>	
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= w.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary') %>
				</div>
			</div>
			<% end %>
			<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and return to article listing", articles_path %> ]
			</div>
	</div>
</div>